<div id="new_project">
	<legend>Add Project Idea</legend>
	<%= form_for(@project) do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	
	<%= f.submit "Add", class: "btn btn-success" %>

	<% end %>	
</div>