
	<%= form_for(@project) do |f| %>
	<div>
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>
	<div>
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>
	<div>
		<%= f.label :project_category  %>
		<%= collection_select(:project, :project_category_id, @project_categories, :id, :name) %>
	</div>
	<%= f.submit  class: "btn btn-success" %>
	<% end %>	