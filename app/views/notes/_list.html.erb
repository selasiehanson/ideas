<h2>
		<i>
			<ng-pluralize count="notes.length"
                 when="{
                     'one': '1 Note',
                     'other': '{} Notes'}">
			</ng-pluralize>
		</i>
	<span class="pull-right"> {{ data.project.title }} </span>
</h2>
<br>
<table class="table table-bordered table-striped" ng-show="hasNotes">
	<tr ng-repeat="note in notes">
		<td class="action_column1"> {{ $index + 1}}. </td>
		<td> 
			<span class="ax-loader" visible="note.id == current_note_task_id"></span> {{ note.content }} 

		</td>
		<td class="time_col">  {{ note.created_at | date:'short' }} </td>
		<td class="note_actions">
			<span class="label label-inverse">									
					<a id="" href="" title="create task" ng-click="createTask(note)"> 
						<i class="icon-white icon-chevron-right"></i>
					</a>
			</span>
			<span class="label">
				<a href="" title="edit note" ng-click="editNote(note)"> 
					<i class="icon-white icon-pencil"> </i> 
				</a>
			</span>
			<span class="label label-important">
				<a id="delete_note" href="" title="delete note" ng-click="promptDelete(note, $index)"> 
					<i class="icon-white icon-remove"></i> 	
				</a>
			</span>
		 </td>
	</tr>
</table>
<div ng-hide="hasNotes">There currently no notes for this project </div>
