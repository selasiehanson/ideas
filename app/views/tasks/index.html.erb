<h2>Tasks: <%= @project.title %>
	<span class="pull-right note_tasks_back_link">
		<%= link_to "Notes", @project %>
	</span>
</h2>
<div class="row">
	<div class="span4">
		<span class="badge badge-important">Pending (<%= @pending_tasks.count %>)</span>
		<br><br>
		<div class="pending">
			<table class="table table-bordered table-striped">
			<tbody>
				<% @pending_tasks.each do |task|%>
					<tr>
						<td  colspan="2">
							<%= form_for([@project, task]) do |f| %>
								<%= check_box("task", "checked") %><%= task.content %>
							<% end %>
							
						</td>
						
					</tr>
				<% end %>
			</tbody>
		</table>
		</div>
		
	</div>
	<div class="span4">
		<span class="badge badge-warning">Started (<%= @started_tasks.count %>)</span>
		<br><br>
		<div class="started">
			<table class="table table-bordered table-striped">
			<tbody>
				<% @started_tasks.each do |task|%>
					<tr>
						<td  colspan="2">
							<%= form_for([@project, task]) do |f| %>
								<%= check_box("task", "checked") %><%= task.content %>
							<% end %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
		</div>
	</div>
	<div class="span4">
		<span class="badge badge-success">Completed (<%= @completed_tasks.count %>)</span>
		<br><br>
		<div class="completed">
			<table class="table table-bordered table-striped">
			<tbody>
				<% @completed_tasks.each do |task|%>
					<tr>
						<td  colspan="2">
							<%= task.content %>
						</td>
						
					</tr>
				<% end %>
			</tbody>
		</table>
		</div>
	</div>
</div>